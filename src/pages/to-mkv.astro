---
import Layout from '../layouts/Layout.astro';
import VideoConverter from '../components/VideoConverter.tsx';
import Adsterra from '../components/Adsterra.astro';
---

<Layout
	title="Convert to MKV - Free Online Video Converter | QuickEditVideo"
	description="Convert videos to MKV format online for free! Transform MP4, AVI, MOV, WebM to MKV. No uploads, no sign-up. Privacy-focused video conversion that works in your browser."
	keywords="convert to MKV, video converter, MKV converter, MP4 to MKV, AVI to MKV, MOV to MKV, WebM to MKV, free video converter, online video converter"
	ogTitle="Free Online MKV Video Converter - Convert Any Video to MKV"
	ogDescription="Convert any video format to MKV with our free online converter. Supports MP4, AVI, MOV, WebM and more. No uploads required - completely private and secure."
	canonicalUrl="https://quickeditvideo.com/to-mkv"
>
	<main class="min-h-screen bg-gray-50">
		<!-- Page Header -->
		<div id="page-header" class="bg-white border-b border-gray-200 py-6 transition-all duration-300">
			<div class="max-w-6xl mx-auto px-4 md:px-6">
				<h1 class="text-3xl font-bold text-gray-900">Convert to MKV</h1>
				<p class="text-gray-600 mt-2">Transform any video format to MKV with high quality</p>
			</div>
		</div>

		<!-- Main Video Converter -->
		<section class="p-4 md:p-6 w-full">
			<div class="max-w-6xl mx-auto w-full">
				<VideoConverter client:load targetFormat="mkv" targetFormatName="MKV" />
			</div>
		</section>

		<Adsterra />

		<!-- Quick Help -->
		<section id="quick-help" class="px-4 md:px-6 pb-16">
			<div class="max-w-6xl mx-auto">
				<h3 class="text-2xl font-semibold text-gray-900 mb-8 text-center">Quick Guide</h3>
				
				<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
					<!-- Step 1: Upload -->
					<div class="bg-white rounded-lg border border-gray-200 hover:border-teal-300 hover:shadow-md transition-all p-6 text-center">
						<div class="w-12 h-12 bg-teal-100 rounded-lg flex items-center justify-center mb-4 mx-auto">
							<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-teal-600">
								<path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/>
								<polyline points="14,2 14,8 20,8"/>
								<path d="M10 15.5L16 12L10 8.5V15.5Z"/>
							</svg>
						</div>
						<div class="w-8 h-8 bg-teal-500 rounded-full flex items-center justify-center text-white font-semibold text-sm mb-3 mx-auto">1</div>
						<h4 class="font-semibold text-gray-900 mb-2">Upload Video</h4>
						<p class="text-sm text-gray-600">Upload your video file (supports MP4, AVI, MOV, WebM and more)</p>
					</div>

					<!-- Step 2: Convert -->
					<div class="bg-white rounded-lg border border-gray-200 hover:border-teal-300 hover:shadow-md transition-all p-6 text-center">
						<div class="w-12 h-12 bg-teal-100 rounded-lg flex items-center justify-center mb-4 mx-auto">
							<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-teal-600">
								<path d="M21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12Z"/>
								<path d="M12 6V12L16 14"/>
							</svg>
						</div>
						<div class="w-8 h-8 bg-teal-500 rounded-full flex items-center justify-center text-white font-semibold text-sm mb-3 mx-auto">2</div>
						<h4 class="font-semibold text-gray-900 mb-2">Auto Convert</h4>
						<p class="text-sm text-gray-600">Click convert and our tool will transform your video to MKV</p>
					</div>

					<!-- Step 3: Download -->
					<div class="bg-white rounded-lg border border-gray-200 hover:border-teal-300 hover:shadow-md transition-all p-6 text-center">
						<div class="w-12 h-12 bg-teal-100 rounded-lg flex items-center justify-center mb-4 mx-auto">
							<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-teal-600">
								<path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
								<polyline points="7,10 12,15 17,10"/>
								<line x1="12" y1="15" x2="12" y2="3"/>
							</svg>
						</div>
						<div class="w-8 h-8 bg-teal-500 rounded-full flex items-center justify-center text-white font-semibold text-sm mb-3 mx-auto">3</div>
						<h4 class="font-semibold text-gray-900 mb-2">Download MKV</h4>
						<p class="text-sm text-gray-600">Download your converted MKV video with preserved quality</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Content Section for SEO -->
		<section class="bg-gray-50 py-16 px-4 md:px-6">
			<div class="max-w-4xl mx-auto">
				<!-- Introduction -->
				<div class="mb-16">
					<h2 class="text-3xl font-bold text-gray-900 mb-6">Convert Any Video to MKV Format</h2>
					<div class="prose prose-lg max-w-none text-gray-700 space-y-4">
						<p>
							MKV (Matroska Video) is a free, open-standard multimedia container that can hold unlimited video, audio, picture, and subtitle tracks in one file. It's perfect for storing high-quality content with multiple tracks and advanced features.
						</p>
						<p>
							Our privacy-focused MKV converter runs entirely in your browser without uploading files to any servers. Convert your videos to MKV format while maintaining complete control over your content and privacy.
						</p>
					</div>
				</div>

				<!-- Why MKV? -->
				<div class="mb-16">
					<h3 class="text-2xl font-semibold text-gray-900 mb-6">Why Convert to MKV?</h3>
					<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
						<div>
							<h4 class="text-lg font-medium text-gray-900 mb-3">Open Standard</h4>
							<p class="text-gray-600 mb-4">
								Based on open standards, ensuring long-term compatibility and freedom from proprietary restrictions. Supported by most modern media players.
							</p>
						</div>
						<div>
							<h4 class="text-lg font-medium text-gray-900 mb-3">Multiple Tracks</h4>
							<p class="text-gray-600 mb-4">
								Supports unlimited video, audio, and subtitle tracks in multiple languages, perfect for movies and complex media projects.
							</p>
						</div>
						<div>
							<h4 class="text-lg font-medium text-gray-900 mb-3">High Quality</h4>
							<p class="text-gray-600 mb-4">
								Supports virtually all video and audio codecs, including high-definition and lossless formats for maximum quality preservation.
							</p>
						</div>
						<div>
							<h4 class="text-lg font-medium text-gray-900 mb-3">Advanced Features</h4>
							<p class="text-gray-600 mb-4">
								Includes support for chapters, menus, metadata, and error recovery, making it ideal for archival and professional use.
							</p>
						</div>
					</div>
				</div>

				<!-- Supported Formats -->
				<div>
					<h3 class="text-2xl font-semibold text-gray-900 mb-6">Supported Input Formats</h3>
					<div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
						<div class="grid grid-cols-2 md:grid-cols-4 gap-4">
							<div class="text-center p-3 bg-gray-50 rounded-lg">
								<span class="font-medium text-gray-900">MP4</span>
							</div>
							<div class="text-center p-3 bg-gray-50 rounded-lg">
								<span class="font-medium text-gray-900">AVI</span>
							</div>
							<div class="text-center p-3 bg-gray-50 rounded-lg">
								<span class="font-medium text-gray-900">MOV</span>
							</div>
							<div class="text-center p-3 bg-gray-50 rounded-lg">
								<span class="font-medium text-gray-900">WebM</span>
							</div>
							<div class="text-center p-3 bg-gray-50 rounded-lg">
								<span class="font-medium text-gray-900">WMV</span>
							</div>
							<div class="text-center p-3 bg-gray-50 rounded-lg">
								<span class="font-medium text-gray-900">FLV</span>
							</div>
							<div class="text-center p-3 bg-gray-50 rounded-lg">
								<span class="font-medium text-gray-900">3GP</span>
							</div>
							<div class="text-center p-3 bg-gray-50 rounded-lg">
								<span class="font-medium text-gray-900">And more</span>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>

	<script>
		// Listen for events from VideoConverter component to hide/show header
		document.addEventListener('DOMContentLoaded', function() {
			const pageHeader = document.getElementById('page-header');
			
			// Function to toggle header visibility
			function toggleHeader(show) {
				if (pageHeader) {
					if (show) {
						pageHeader.style.display = 'block';
						pageHeader.style.opacity = '1';
						pageHeader.style.transform = 'translateY(0)';
					} else {
						pageHeader.style.opacity = '0';
						pageHeader.style.transform = 'translateY(-10px)';
						setTimeout(() => {
							pageHeader.style.display = 'none';
						}, 300);
					}
				}
			}
			
			// Listen for custom events from VideoConverter
			document.addEventListener('videoConverterViewChange', function(event) {
				const isLandingView = event.detail.currentView === 'landing';
				toggleHeader(isLandingView);
			});
		});
	</script>

	<style>
		.video-container-custom {
			max-height: calc(100vh - 400px);
		}
		
		@media (max-width: 768px) {
			.video-container-custom {
				max-height: 40vh;
			}
		}
		
		.progress-ring {
			transform: rotate(-90deg);
		}
		
		.progress-ring circle {
			stroke-dasharray: 251.2;
			stroke-dashoffset: 251.2;
			transition: stroke-dashoffset 0.1s ease;
		}
	</style>
</Layout>