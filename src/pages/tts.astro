---
import Layout from '../layouts/Layout.astro';
import TextToSpeech from '../components/TextToSpeech.tsx';
---

<Layout title="Text to Speech - Quick Edit Video">
  <main class="container mx-auto py-8 px-4">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-gray-800 mb-4">Text to Speech</h1>
        <p class="text-gray-600">Convert text to high-quality speech using AI-powered voice synthesis</p>
      </div>
      
      <TextToSpeech client:load />
    </div>
  </main>
</Layout>