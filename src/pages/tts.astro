<script>
	// Import the worker using ?worker&url pattern
	import TextToSpeechWorkerUrl from '../workers/TextToSpeechWorker.ts?worker&url';
	
	let ttsWorker: Worker | null = null;
	
	function initializeTTSWorker(): void {
		try {
			// Create worker from the TextToSpeechWorker file
			ttsWorker = new Worker(TextToSpeechWorkerUrl, { type: 'module' });
			
			// Listen for worker responses
			ttsWorker.addEventListener('message', function(e: MessageEvent) {
				const response = e.data;
				
				switch (response.type) {
					case 'model-loaded':
						console.log('TTS model loaded successfully');
						break;
					case 'model-error':
						console.error('TTS model failed to load:', response.error);
						break;
					case 'speech-generated':
						console.log('Speech generated for ID:', response.id);
						console.log('Audio URL:', response.audioUrl);
						
						// You can dispatch custom events here to communicate with other parts of the page
						window.dispatchEvent(new CustomEvent('tts-speech-generated', {
							detail: { id: response.id, audioUrl: response.audioUrl }
						}));
						break;
					case 'speech-error':
						console.error('Speech generation failed for ID:', response.id, ':', response.error);
						break;
					default:
						console.log('Unknown response from worker:', response);
						break;
				}
			});
			
			
		} catch (error) {
			console.error('Failed to initialize TTS worker:', error);
		}
	}
	
	// Initialize the worker when the page loads
	initializeTTSWorker();
	
</script>
