	</main>

	<script>
		// Listen for events from VideoMerger component to hide/show header
		document.addEventListener('DOMContentLoaded', function() {
			const pageHeader = document.getElementById('page-header');
			
			// Function to toggle header visibility
			function toggleHeader(show: boolean) {
				if (pageHeader) {
					if (show) {
						pageHeader.style.display = 'block';
						pageHeader.style.opacity = '1';
						pageHeader.style.transform = 'translateY(0)';
					} else {
						pageHeader.style.opacity = '0';
						pageHeader.style.transform = 'translateY(-10px)';
						setTimeout(() => {
							pageHeader.style.display = 'none';
						}, 300);
					}
				}
			}
			
			// Listen for custom events from VideoMerger
			document.addEventListener('videoMergerViewChange', function(event) {
				const customEvent = event as any;
				const isLandingView = customEvent.detail.currentView === 'landing';
				toggleHeader(isLandingView);
			});
		});
	</script>

	<style>
		.clip-handle {
			cursor: move;
			touch-action: none;
		}
		
		.clip-handle:hover {
			transform: scale(1.05);
		}
		
		.clip-handle:active {
			transform: scale(0.95);
		}
		
		.video-container {
			aspect-ratio: 16/9;
			max-height: calc(100vh - 250px);
			width: 100%;
			height: 100%;
		}
		
		.video-container-custom {
			max-height: calc(100vh - 400px);
		}
		
		@media (max-width: 768px) {
			.video-container-custom {
				max-height: 40vh;
			}
		}
		
		.progress-ring {
			transform: rotate(-90deg);
		}
		
		.progress-ring circle {
			stroke-dasharray: 251.2;
			stroke-dashoffset: 251.2;
			transition: stroke-dashoffset 0.1s ease;
		}

		/* Drag and drop styling */
		.clip-item {
			transition: transform 0.2s ease, box-shadow 0.2s ease;
		}
		
		.clip-item.dragging {
			transform: rotate(3deg) scale(1.05);
			box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
			z-index: 1000;
		}
		
		.clip-item.drag-over {
			transform: translateX(10px);
		}
		
		/* Duration slider styling */
		.duration-slider {
			background: linear-gradient(to right, #14b8a6 0%, #14b8a6 var(--value), #e5e7eb var(--value), #e5e7eb 100%);
		}

		/* Prevent horizontal scroll */
		* {
			box-sizing: border-box;
		}
	</style>
</Layout>
