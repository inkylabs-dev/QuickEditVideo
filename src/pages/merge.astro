	description="Merge videos online free! Combine video files and join MP4 online without upload. Video merger to combine multiple videos into one. Works with MP4, MOV, WebM, MKV. No signup required."
	keywords="merge videos, combine video files, join mp4 online, video merger, merge videos online, combine videos online, join videos, video joiner, merge mp4, combine mp4, avi merger, mov merger, webm merger, video combiner, concatenate videos, free video merger, online video merger no upload"
	ogTitle="Free Online Video Merger - Combine Multiple Videos"
	ogDescription="Professional video merging tool. Combine multiple videos with custom duration and ordering. Works with all major formats. No uploads required - completely private and secure."
	canonicalUrl="https://quickeditvideo.com/merge"
	showBreadcrumbs={true}
	currentPage="Merge Videos"
>
	<main class="min-h-screen bg-gray-50">
		<!-- Page Header -->
		<div id="page-header" class="bg-white border-b border-gray-200 py-6 transition-all duration-300">
			<div class="max-w-6xl mx-auto px-4 md:px-6">
				<h1 class="text-3xl font-bold text-gray-900">Merge Videos</h1>
				<p class="text-gray-600 mt-2">Combine multiple videos into one with custom duration and ordering</p>
			</div>
		</div>

		<!-- Main Video Editor -->
		<section class="p-4 md:p-6 w-full">
			<div class="max-w-6xl mx-auto w-full">
				<VideoMerger client:load />
			</div>
		</section>

		<Adsterra />

		<!-- Quick Help -->
		<section id="quick-help" class="px-4 md:px-6 pb-16">
			<div class="max-w-6xl mx-auto">
				<h3 class="text-2xl font-semibold text-gray-900 mb-8 text-center">Quick Guide</h3>
				
				<div class="grid grid-cols-1 md:grid-cols-4 gap-6">
					<!-- Step 1: Upload -->
