---
import Layout from '../layouts/Layout.astro';
import VideoConverter from '../components/VideoConverter.tsx';
import Adsterra from '../components/Adsterra.astro';
import RecommendedTools from '../components/RecommendedTools.astro';
---

<Layout
	title="Convert to WebM - Free Online Video Converter | QuickEditVideo"
	description="Convert videos to WebM format online for free! Transform MP4, AVI, MOV, MKV to WebM. No uploads, no sign-up. Privacy-focused video conversion that works in your browser."
	keywords="convert to WebM, video converter, WebM converter, MP4 to WebM, AVI to WebM, MOV to WebM, MKV to WebM, free video converter, online video converter"
	ogTitle="Free Online WebM Video Converter - Convert Any Video to WebM"
	ogDescription="Convert any video format to WebM with our free online converter. Supports MP4, AVI, MOV, MKV and more. No uploads required - completely private and secure."
	canonicalUrl="https://quickeditvideo.com/to-webm"
>
	<main class="min-h-screen bg-gray-50">
		<!-- Page Header -->
		<div id="page-header" class="bg-white border-b border-gray-200 py-6 transition-all duration-300">
			<div class="max-w-6xl mx-auto px-4 md:px-6">
				<h1 class="text-3xl font-bold text-gray-900">Convert to WebM</h1>
				<p class="text-gray-600 mt-2">Transform any video format to WebM with high quality</p>
			</div>
		</div>

		<!-- Main Video Converter -->
		<section class="p-4 md:p-6 w-full">
			<div class="max-w-6xl mx-auto w-full">
				<VideoConverter client:load targetFormat="webm" targetFormatName="WebM" />
			</div>
		</section>

		<Adsterra />

		<!-- Quick Help -->
		<section id="quick-help" class="px-4 md:px-6 pb-16">
			<div class="max-w-6xl mx-auto">
				<h3 class="text-2xl font-semibold text-gray-900 mb-8 text-center">Quick Guide</h3>
				
				<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
					<!-- Step 1: Upload -->
					<div class="bg-white rounded-lg border border-gray-200 hover:border-teal-300 hover:shadow-md transition-all p-6 text-center">
						<div class="w-12 h-12 bg-teal-100 rounded-lg flex items-center justify-center mb-4 mx-auto">
							<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-teal-600">
								<path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/>
								<polyline points="14,2 14,8 20,8"/>
								<path d="M10 15.5L16 12L10 8.5V15.5Z"/>
							</svg>
						</div>
						<div class="w-8 h-8 bg-teal-500 rounded-full flex items-center justify-center text-white font-semibold text-sm mb-3 mx-auto">1</div>
						<h4 class="font-semibold text-gray-900 mb-2">Upload Video</h4>
						<p class="text-sm text-gray-600">Upload your video file (supports MP4, AVI, MOV, MKV and more)</p>
					</div>

					<!-- Step 2: Convert -->
					<div class="bg-white rounded-lg border border-gray-200 hover:border-teal-300 hover:shadow-md transition-all p-6 text-center">
						<div class="w-12 h-12 bg-teal-100 rounded-lg flex items-center justify-center mb-4 mx-auto">
							<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-teal-600">
								<path d="M21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12Z"/>
								<path d="M12 6V12L16 14"/>
							</svg>
						</div>
						<div class="w-8 h-8 bg-teal-500 rounded-full flex items-center justify-center text-white font-semibold text-sm mb-3 mx-auto">2</div>
						<h4 class="font-semibold text-gray-900 mb-2">Auto Convert</h4>
						<p class="text-sm text-gray-600">Click convert and our tool will transform your video to WebM</p>
					</div>

					<!-- Step 3: Download -->
					<div class="bg-white rounded-lg border border-gray-200 hover:border-teal-300 hover:shadow-md transition-all p-6 text-center">
						<div class="w-12 h-12 bg-teal-100 rounded-lg flex items-center justify-center mb-4 mx-auto">
							<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-teal-600">
								<path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
								<polyline points="7,10 12,15 17,10"/>
								<line x1="12" y1="15" x2="12" y2="3"/>
							</svg>
						</div>
						<div class="w-8 h-8 bg-teal-500 rounded-full flex items-center justify-center text-white font-semibold text-sm mb-3 mx-auto">3</div>
						<h4 class="font-semibold text-gray-900 mb-2">Download WebM</h4>
						<p class="text-sm text-gray-600">Download your converted WebM video with preserved quality</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Content Section for SEO with Sidebar -->
		<section class="bg-gray-50 py-16 px-4 md:px-6">
			<div class="max-w-7xl mx-auto">
				<div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
					<!-- Main Content -->
					<div class="lg:col-span-3">
				<!-- Introduction -->
				<div class="mb-16">
					<h2 class="text-3xl font-bold text-gray-900 mb-6">Convert Any Video to WebM Format</h2>
					<div class="prose prose-lg max-w-none text-gray-700 space-y-4">
						<p>
							WebM is an open, royalty-free media file format designed for the web. Developed by Google, it provides high-quality video compression optimized for online streaming and web playback with excellent browser support.
						</p>
						<p>
							Our browser-based WebM converter ensures complete privacy by processing your videos locally. No file uploads to servers, no waiting in queues, and no privacy concerns - your videos remain on your device throughout the conversion process.
						</p>
					</div>
				</div>

				<!-- Why WebM? -->
				<div class="mb-16">
					<h3 class="text-2xl font-semibold text-gray-900 mb-6">Why Convert to WebM?</h3>
					<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
						<div>
							<h4 class="text-lg font-medium text-gray-900 mb-3">Web Optimized</h4>
							<p class="text-gray-600 mb-4">
								Specifically designed for web use with excellent compression efficiency and fast loading times. Perfect for websites and online platforms.
							</p>
						</div>
						<div>
							<h4 class="text-lg font-medium text-gray-900 mb-3">Open Source</h4>
							<p class="text-gray-600 mb-4">
								Completely open and royalty-free format, ensuring long-term compatibility and freedom from licensing restrictions.
							</p>
						</div>
						<div>
							<h4 class="text-lg font-medium text-gray-900 mb-3">High Quality</h4>
							<p class="text-gray-600 mb-4">
								Uses VP8/VP9 video codecs and Vorbis/Opus audio codecs to deliver excellent quality at smaller file sizes than many alternatives.
							</p>
						</div>
						<div>
							<h4 class="text-lg font-medium text-gray-900 mb-3">Browser Support</h4>
							<p class="text-gray-600 mb-4">
								Native support in all major modern browsers including Chrome, Firefox, Opera, and Edge. Perfect for HTML5 video embedding.
							</p>
						</div>
					</div>
				</div>

				<!-- Supported Formats -->
				<div>
					<h3 class="text-2xl font-semibold text-gray-900 mb-6">Supported Input Formats</h3>
					<div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
						<div class="grid grid-cols-2 md:grid-cols-4 gap-4">
							<div class="text-center p-3 bg-gray-50 rounded-lg">
								<span class="font-medium text-gray-900">MP4</span>
							</div>
							<div class="text-center p-3 bg-gray-50 rounded-lg">
								<span class="font-medium text-gray-900">AVI</span>
							</div>
							<div class="text-center p-3 bg-gray-50 rounded-lg">
								<span class="font-medium text-gray-900">MOV</span>
							</div>
							<div class="text-center p-3 bg-gray-50 rounded-lg">
								<span class="font-medium text-gray-900">MKV</span>
							</div>
							<div class="text-center p-3 bg-gray-50 rounded-lg">
								<span class="font-medium text-gray-900">WMV</span>
							</div>
							<div class="text-center p-3 bg-gray-50 rounded-lg">
								<span class="font-medium text-gray-900">FLV</span>
							</div>
							<div class="text-center p-3 bg-gray-50 rounded-lg">
								<span class="font-medium text-gray-900">3GP</span>
							</div>
							<div class="text-center p-3 bg-gray-50 rounded-lg">
								<span class="font-medium text-gray-900">And more</span>
							</div>
						</div>
					</div>
				</div>

				<!-- FAQ Section -->
				<div>
					<h3 class="text-2xl font-semibold text-gray-900 mb-8">Frequently Asked Questions</h3>
					<div class="space-y-6">
						<div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
							<h4 class="font-semibold text-gray-900 mb-2">Is this WebM converter completely free?</h4>
							<p class="text-gray-600">Yes, absolutely! Convert unlimited videos to WebM with no watermarks, no time limits, and no hidden costs.</p>
						</div>
						
						<div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
							<h4 class="font-semibold text-gray-900 mb-2">Are my videos private and secure during conversion?</h4>
							<p class="text-gray-600">Completely. All video conversion happens locally in your browser using WebAssembly. Your videos never get uploaded to our servers.</p>
						</div>
						
						<div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
							<h4 class="font-semibold text-gray-900 mb-2">Why should I choose WebM format?</h4>
							<p class="text-gray-600">WebM is perfect for web use with superior compression, fast loading times, and native browser support. It's completely open-source and royalty-free.</p>
						</div>
						
						<div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
							<h4 class="font-semibold text-gray-900 mb-2">What video formats can I convert to WebM?</h4>
							<p class="text-gray-600">We support all major video formats including MP4, AVI, MOV, MKV, WMV, FLV, 3GP, and many more. If your browser can play it, we can convert it.</p>
						</div>
						
						<div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
							<h4 class="font-semibold text-gray-900 mb-2">Will converting to WebM preserve video quality?</h4>
							<p class="text-gray-600">Yes! WebM uses advanced VP8/VP9 codecs that deliver excellent quality at smaller file sizes, perfect for web streaming and online content.</p>
						</div>
						
						<div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
							<h4 class="font-semibold text-gray-900 mb-2">Can I use this on my mobile device?</h4>
							<p class="text-gray-600">Yes! The converter works on any device with a modern web browser, including smartphones and tablets. WebM is widely supported across all platforms.</p>
						</div>
						
						<div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
							<h4 class="font-semibold text-gray-900 mb-2">Is there a file size limit for conversion?</h4>
							<p class="text-gray-600">The only limit is your device's available memory. WebM's efficient compression means faster processing and smaller output files.</p>
						</div>
						
						<div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
							<h4 class="font-semibold text-gray-900 mb-2">Do I need to create an account?</h4>
							<p class="text-gray-600">No account needed! Just visit the page and start converting. No registration, no email required - just instant WebM conversion.</p>
						</div>
					</div>
				</div>
					</div>
					
					<!-- Sidebar -->
					<RecommendedTools currentToolId="to-webm" category="converters" />
				</div>
			</div>
		</section>
	</main>

	<script>
		// Listen for events from VideoConverter component to hide/show header
		document.addEventListener('DOMContentLoaded', function() {
			const pageHeader = document.getElementById('page-header');
			
			// Function to toggle header visibility
			function toggleHeader(show) {
				if (pageHeader) {
					if (show) {
						pageHeader.style.display = 'block';
						pageHeader.style.opacity = '1';
						pageHeader.style.transform = 'translateY(0)';
					} else {
						pageHeader.style.opacity = '0';
						pageHeader.style.transform = 'translateY(-10px)';
						setTimeout(() => {
							pageHeader.style.display = 'none';
						}, 300);
					}
				}
			}
			
			// Listen for custom events from VideoConverter
			document.addEventListener('videoConverterViewChange', function(event) {
				const isLandingView = event.detail.currentView === 'landing';
				toggleHeader(isLandingView);
			});
		});
	</script>

	<style>
		.video-container-custom {
			max-height: calc(100vh - 400px);
		}
		
		@media (max-width: 768px) {
			.video-container-custom {
				max-height: 40vh;
			}
		}
		
		.progress-ring {
			transform: rotate(-90deg);
		}
		
		.progress-ring circle {
			stroke-dasharray: 251.2;
			stroke-dashoffset: 251.2;
			transition: stroke-dashoffset 0.1s ease;
		}
	</style>
</Layout>