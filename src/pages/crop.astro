---
import Layout from '../layouts/Layout.astro';
import VideoCropper from '../components/VideoCropper.tsx';
---

<Layout
	title="Video Cropper - Crop Videos Online Free | QuickEditVideo"
	description="Crop videos online with precision! Trim video dimensions, select aspect ratios, and rotate before cropping. Works with MP4, WebM, AVI, MOV files. No uploads, no sign-up."
	keywords="video cropper, crop video online, video trim, aspect ratio, video rotation, free video cropper, MP4 cropper, WebM cropper, AVI cropper, MOV cropper, online video editor"
	ogTitle="Free Online Video Cropper - Crop Videos with Precision"
	ogDescription="Professional video cropping tool. Crop videos with custom dimensions and aspect ratios. Rotate before cropping. Works with all major formats. No uploads required - completely private and secure."
	canonicalUrl="https://quickeditvideo.com/crop"
>
	<main class="min-h-screen bg-gray-50">
		<!-- Page Header -->
		<div id="page-header" class="bg-white border-b border-gray-200 py-6 transition-all duration-300">
			<div class="max-w-6xl mx-auto px-4 md:px-6">
				<h1 class="text-3xl font-bold text-gray-900">Video Cropper</h1>
				<p class="text-gray-600 mt-2">Crop videos with precision and custom aspect ratios</p>
			</div>
		</div>

		<!-- Main Video Editor -->
		<section class="p-4 md:p-6 w-full">
			<div class="max-w-6xl mx-auto w-full">
				<VideoCropper client:load />
			</div>
		</section>

		<!-- Quick Help -->
		<section id="quick-help" class="px-4 md:px-6 pb-16">
			<div class="max-w-6xl mx-auto">
				<h3 class="text-2xl font-semibold text-gray-900 mb-8 text-center">Quick Guide</h3>
				
				<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
					<!-- Step 1: Upload -->
					<div class="bg-white rounded-lg border border-gray-200 hover:border-teal-300 hover:shadow-md transition-all p-6 text-center">
