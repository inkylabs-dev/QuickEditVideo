---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<main class="min-h-screen bg-gray-50">
		<!-- Navigation -->
		<nav class="bg-white border-b border-gray-200 sticky top-0 z-50">
			<div class="max-w-5xl mx-auto px-6 py-4 flex items-center justify-between">
				<div class="font-bold text-xl text-gray-900">QuickEditVideo</div>
				<div class="text-sm text-gray-600 bg-gray-100 px-3 py-1 rounded-full">
					Private â€¢ No uploads
				</div>
			</div>
		</nav>

		<!-- Hero Section -->
		<section class="pt-16 pb-12 px-6">
			<div class="max-w-3xl mx-auto text-center">
				<h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
					Professional video editing<br>
					<span class="text-blue-600">in your browser</span>
				</h1>
				<p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
					Trim, convert, and compress videos instantly. No downloads, no accounts. Your files never leave your device.
				</p>
				
				<!-- Primary CTA -->
				<a href="/trim" class="inline-flex items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white px-8 py-4 rounded-lg font-medium text-lg transition-colors shadow-sm">
					Start editing
					<svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
						<path d="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z"/>
					</svg>
				</a>
			</div>
		</section>

		<!-- Popular Tools -->
		<section class="pb-16 px-6">
			<div class="max-w-4xl mx-auto">
				<h2 class="text-2xl font-semibold text-gray-900 mb-8 text-center">Most used tools</h2>
				
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mb-12">
					<a href="/trim" class="group p-6 bg-white rounded-lg border border-gray-200 hover:border-blue-300 hover:shadow-md transition-all">
						<div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4 group-hover:bg-blue-200 transition-colors">
							<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-blue-600">
								<path d="M20 4L3 11l3 3l4-2l2 4Z"/>
							</svg>
						</div>
						<h3 class="font-semibold text-gray-900 mb-2">Video Trimmer</h3>
						<p class="text-sm text-gray-600">Cut videos with frame precision</p>
					</a>

					<a href="/compress" class="group p-6 bg-white rounded-lg border border-gray-200 hover:border-blue-300 hover:shadow-md transition-all">
						<div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4 group-hover:bg-blue-200 transition-colors">
							<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-blue-600">
								<rect x="2" y="3" width="20" height="14" rx="2" ry="2"/>
								<line x1="8" y1="21" x2="16" y2="21"/>
								<line x1="12" y1="17" x2="12" y2="21"/>
							</svg>
						</div>
						<h3 class="font-semibold text-gray-900 mb-2">Compressor</h3>
						<p class="text-sm text-gray-600">Reduce file size instantly</p>
					</a>

					<a href="/to-mp4" class="group p-6 bg-white rounded-lg border border-gray-200 hover:border-blue-300 hover:shadow-md transition-all">
						<div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4 group-hover:bg-blue-200 transition-colors">
							<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-blue-600">
								<path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/>
								<polyline points="14,2 14,8 20,8"/>
							</svg>
						</div>
						<h3 class="font-semibold text-gray-900 mb-2">Convert to MP4</h3>
						<p class="text-sm text-gray-600">Universal format converter</p>
					</a>
				</div>

				<!-- All Tools Toggle -->
				<div class="text-center">
					<button id="show-all-tools" class="text-blue-600 hover:text-blue-700 font-medium">
						View all tools
						<svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" class="inline ml-1">
							<path d="M7.41,8.58L12,13.17L16.59,8.58L18,10L12,16L6,10L7.41,8.58Z"/>
						</svg>
					</button>
				</div>

				<!-- All Tools Section (Initially Hidden) -->
				<div id="all-tools" class="hidden mt-12 pt-8 border-t border-gray-200">
					<div class="space-y-8">
						<!-- Video Editing -->
						<div>
							<h3 class="text-lg font-medium text-gray-900 mb-4">Video Editing</h3>
							<div class="grid grid-cols-2 md:grid-cols-4 gap-3">
								<a href="/trim" class="p-3 text-center bg-white rounded-lg border border-gray-200 hover:border-blue-300 transition-colors">
									<div class="text-sm font-medium text-gray-900">Trimmer</div>
								</a>
								<a href="/merge" class="p-3 text-center bg-white rounded-lg border border-gray-200 hover:border-blue-300 transition-colors">
									<div class="text-sm font-medium text-gray-900">Merger</div>
								</a>
								<a href="/resize" class="p-3 text-center bg-white rounded-lg border border-gray-200 hover:border-blue-300 transition-colors">
									<div class="text-sm font-medium text-gray-900">Resizer</div>
								</a>
								<a href="/crop" class="p-3 text-center bg-white rounded-lg border border-gray-200 hover:border-blue-300 transition-colors">
									<div class="text-sm font-medium text-gray-900">Cropper</div>
								</a>
							</div>
						</div>

						<!-- Converters -->
						<div>
							<h3 class="text-lg font-medium text-gray-900 mb-4">Format Converters</h3>
							<div class="grid grid-cols-3 md:grid-cols-6 gap-3">
								<a href="/to-mp4" class="p-3 text-center bg-white rounded-lg border border-gray-200 hover:border-blue-300 transition-colors">
									<div class="text-sm font-medium text-gray-900">MP4</div>
								</a>
								<a href="/to-avi" class="p-3 text-center bg-white rounded-lg border border-gray-200 hover:border-blue-300 transition-colors">
									<div class="text-sm font-medium text-gray-900">AVI</div>
								</a>
								<a href="/to-mov" class="p-3 text-center bg-white rounded-lg border border-gray-200 hover:border-blue-300 transition-colors">
									<div class="text-sm font-medium text-gray-900">MOV</div>
								</a>
								<a href="/to-webm" class="p-3 text-center bg-white rounded-lg border border-gray-200 hover:border-blue-300 transition-colors">
									<div class="text-sm font-medium text-gray-900">WebM</div>
								</a>
								<a href="/to-gif" class="p-3 text-center bg-white rounded-lg border border-gray-200 hover:border-blue-300 transition-colors">
									<div class="text-sm font-medium text-gray-900">GIF</div>
								</a>
								<a href="/to-mkv" class="p-3 text-center bg-white rounded-lg border border-gray-200 hover:border-blue-300 transition-colors">
									<div class="text-sm font-medium text-gray-900">MKV</div>
								</a>
							</div>
						</div>

						<!-- Audio -->
						<div>
							<h3 class="text-lg font-medium text-gray-900 mb-4">Audio & Quality</h3>
							<div class="grid grid-cols-2 md:grid-cols-4 gap-3">
								<a href="/extract-audio" class="p-3 text-center bg-white rounded-lg border border-gray-200 hover:border-blue-300 transition-colors">
									<div class="text-sm font-medium text-gray-900">Extract Audio</div>
								</a>
								<a href="/compress" class="p-3 text-center bg-white rounded-lg border border-gray-200 hover:border-blue-300 transition-colors">
									<div class="text-sm font-medium text-gray-900">Compress</div>
								</a>
								<a href="/enhance" class="p-3 text-center bg-white rounded-lg border border-gray-200 hover:border-blue-300 transition-colors">
									<div class="text-sm font-medium text-gray-900">Enhance</div>
								</a>
								<a href="/volume" class="p-3 text-center bg-white rounded-lg border border-gray-200 hover:border-blue-300 transition-colors">
									<div class="text-sm font-medium text-gray-900">Volume</div>
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>

	<script>
		document.getElementById('show-all-tools')?.addEventListener('click', function() {
			const allTools = document.getElementById('all-tools');
			const button = this;
			
			if (allTools?.classList.contains('hidden')) {
				allTools.classList.remove('hidden');
				button.textContent = 'Show less';
			} else {
				allTools?.classList.add('hidden');
				button.innerHTML = 'View all tools <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" class="inline ml-1"><path d="M7.41,8.58L12,13.17L16.59,8.58L18,10L12,16L6,10L7.41,8.58Z"/></svg>';
			}
		});
	</script>
</Layout>