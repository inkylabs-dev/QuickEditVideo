---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<main class="bg-gradient-to-br from-blue-500 to-purple-600 min-h-screen">
		<header class="text-center py-16 text-white">
			<div class="max-w-6xl mx-auto px-5">
				<h1 class="text-4xl md:text-6xl font-bold mb-5 drop-shadow-lg">QuickEditVideo</h1>
				<p class="text-xl md:text-2xl font-light max-w-2xl mx-auto opacity-95">Edit, Convert & Compress Videos Online - Fast, Free & Professional</p>
			</div>
		</header>

		<section class="bg-white rounded-t-3xl mt-10 py-20 shadow-2xl">
			<div class="max-w-6xl mx-auto px-5">
				<div class="space-y-16">
					<div class="tool-category">
						<h2 class="text-3xl font-semibold text-gray-800 mb-8 border-b-4 border-blue-500 pb-4 text-center">Video Editing</h2>
						<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
							<a href="/trim" class="flex items-center p-4 bg-gray-50 hover:bg-blue-500 hover:text-white rounded-xl border border-gray-200 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 group">
								<span class="text-xl mr-3">✂️</span>
								<span class="font-medium">Video Trimmer</span>
							</a>
							<a href="/merge" class="flex items-center p-4 bg-gray-50 hover:bg-blue-500 hover:text-white rounded-xl border border-gray-200 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 group">
								<span class="text-xl mr-3">🔗</span>
								<span class="font-medium">Video Merger</span>
							</a>
							<a href="/resize" class="flex items-center p-4 bg-gray-50 hover:bg-blue-500 hover:text-white rounded-xl border border-gray-200 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 group">
								<span class="text-xl mr-3">📏</span>
								<span class="font-medium">Video Resizer</span>
							</a>
							<a href="/rotate" class="flex items-center p-4 bg-gray-50 hover:bg-blue-500 hover:text-white rounded-xl border border-gray-200 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 group">
								<span class="text-xl mr-3">🔄</span>
								<span class="font-medium">Video Rotator</span>
							</a>
							<a href="/crop" class="flex items-center p-4 bg-gray-50 hover:bg-blue-500 hover:text-white rounded-xl border border-gray-200 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 group">
								<span class="text-xl mr-3">✂️</span>
								<span class="font-medium">Video Cropper</span>
							</a>
							<a href="/speed" class="flex items-center p-4 bg-gray-50 hover:bg-blue-500 hover:text-white rounded-xl border border-gray-200 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 group">
								<span class="text-xl mr-3">⚡</span>
								<span class="font-medium">Speed Changer</span>
							</a>
						</div>
					</div>

					<div class="tool-category">
						<h2 class="text-3xl font-semibold text-gray-800 mb-8 border-b-4 border-green-500 pb-4 text-center">Video Converters</h2>
						<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
							<a href="/to-mp4" class="flex items-center p-4 bg-gray-50 hover:bg-green-500 hover:text-white rounded-xl border border-gray-200 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 group">
								<span class="text-xl mr-3">🎬</span>
								<span class="font-medium">To MP4</span>
							</a>
							<a href="/to-avi" class="flex items-center p-4 bg-gray-50 hover:bg-green-500 hover:text-white rounded-xl border border-gray-200 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 group">
								<span class="text-xl mr-3">📹</span>
								<span class="font-medium">To AVI</span>
							</a>
							<a href="/to-mov" class="flex items-center p-4 bg-gray-50 hover:bg-green-500 hover:text-white rounded-xl border border-gray-200 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 group">
								<span class="text-xl mr-3">🎥</span>
								<span class="font-medium">To MOV</span>
							</a>
							<a href="/to-webm" class="flex items-center p-4 bg-gray-50 hover:bg-green-500 hover:text-white rounded-xl border border-gray-200 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 group">
								<span class="text-xl mr-3">🌐</span>
								<span class="font-medium">To WebM</span>
							</a>
							<a href="/to-gif" class="flex items-center p-4 bg-gray-50 hover:bg-green-500 hover:text-white rounded-xl border border-gray-200 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 group">
								<span class="text-xl mr-3">🎞️</span>
								<span class="font-medium">To GIF</span>
							</a>
							<a href="/to-mkv" class="flex items-center p-4 bg-gray-50 hover:bg-green-500 hover:text-white rounded-xl border border-gray-200 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 group">
								<span class="text-xl mr-3">📺</span>
								<span class="font-medium">To MKV</span>
							</a>
						</div>
					</div>

					<div class="tool-category">
						<h2 class="text-3xl font-semibold text-gray-800 mb-8 border-b-4 border-purple-500 pb-4 text-center">Compression & Quality</h2>
						<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
							<a href="/compress" class="flex items-center p-4 bg-gray-50 hover:bg-purple-500 hover:text-white rounded-xl border border-gray-200 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 group">
								<span class="text-xl mr-3">📦</span>
								<span class="font-medium">Video Compressor</span>
							</a>
							<a href="/enhance" class="flex items-center p-4 bg-gray-50 hover:bg-purple-500 hover:text-white rounded-xl border border-gray-200 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 group">
								<span class="text-xl mr-3">✨</span>
								<span class="font-medium">Video Enhancer</span>
							</a>
							<a href="/stabilize" class="flex items-center p-4 bg-gray-50 hover:bg-purple-500 hover:text-white rounded-xl border border-gray-200 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 group">
								<span class="text-xl mr-3">🎯</span>
								<span class="font-medium">Video Stabilizer</span>
							</a>
							<a href="/upscale" class="flex items-center p-4 bg-gray-50 hover:bg-purple-500 hover:text-white rounded-xl border border-gray-200 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 group">
								<span class="text-xl mr-3">🔍</span>
								<span class="font-medium">Video Upscaler</span>
							</a>
							<a href="/denoise" class="flex items-center p-4 bg-gray-50 hover:bg-purple-500 hover:text-white rounded-xl border border-gray-200 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 group">
								<span class="text-xl mr-3">🔇</span>
								<span class="font-medium">Noise Reducer</span>
							</a>
							<a href="/repair" class="flex items-center p-4 bg-gray-50 hover:bg-purple-500 hover:text-white rounded-xl border border-gray-200 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 group">
								<span class="text-xl mr-3">🔧</span>
								<span class="font-medium">Video Repair</span>
							</a>
						</div>
					</div>

					<div class="tool-category">
						<h2 class="text-3xl font-semibold text-gray-800 mb-8 border-b-4 border-orange-500 pb-4 text-center">Audio & Subtitles</h2>
						<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
							<a href="/extract-audio" class="flex items-center p-4 bg-gray-50 hover:bg-orange-500 hover:text-white rounded-xl border border-gray-200 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 group">
								<span class="text-xl mr-3">🎵</span>
								<span class="font-medium">Extract Audio</span>
							</a>
							<a href="/add-audio" class="flex items-center p-4 bg-gray-50 hover:bg-orange-500 hover:text-white rounded-xl border border-gray-200 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 group">
								<span class="text-xl mr-3">🎧</span>
								<span class="font-medium">Add Audio</span>
							</a>
							<a href="/remove-audio" class="flex items-center p-4 bg-gray-50 hover:bg-orange-500 hover:text-white rounded-xl border border-gray-200 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 group">
								<span class="text-xl mr-3">🔇</span>
								<span class="font-medium">Remove Audio</span>
							</a>
							<a href="/add-subtitles" class="flex items-center p-4 bg-gray-50 hover:bg-orange-500 hover:text-white rounded-xl border border-gray-200 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 group">
								<span class="text-xl mr-3">💬</span>
								<span class="font-medium">Add Subtitles</span>
							</a>
							<a href="/volume" class="flex items-center p-4 bg-gray-50 hover:bg-orange-500 hover:text-white rounded-xl border border-gray-200 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 group">
								<span class="text-xl mr-3">🔊</span>
								<span class="font-medium">Volume Adjuster</span>
							</a>
							<a href="/silence-remover" class="flex items-center p-4 bg-gray-50 hover:bg-orange-500 hover:text-white rounded-xl border border-gray-200 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 group">
								<span class="text-xl mr-3">🤫</span>
								<span class="font-medium">Silence Remover</span>
							</a>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
</Layout>