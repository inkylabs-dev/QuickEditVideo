---
import Layout from '../layouts/Layout.astro';
import ToolsDropdown from '../components/ToolsDropdown.astro';
---

<Layout>
	<main class="min-h-screen bg-gray-50">
		<!-- Navigation -->
		<nav class="bg-white border-b border-gray-200 sticky top-0 z-50">
			<div class="max-w-5xl mx-auto px-6 py-4 flex items-center justify-between">
				<div class="flex items-center gap-8">
					<div class="font-bold text-xl text-gray-900">QuickEditVideo</div>
					
					<!-- Tools Dropdown -->
					<div class="relative">
						<button 
							id="tools-dropdown-trigger"
							class="flex items-center gap-2 px-3 py-2 text-gray-700 hover:text-gray-900 hover:bg-gray-50 rounded-lg transition-colors"
						>
							<span class="font-medium">Tools</span>
							<svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" class="transition-transform" id="dropdown-arrow">
								<path d="M7.41,8.58L12,13.17L16.59,8.58L18,10L12,16L6,10L7.41,8.58Z"/>
							</svg>
						</button>
						
						<!-- Dropdown Menu -->
						<div 
							id="tools-dropdown-menu"
							class="absolute left-0 top-full mt-2 w-80 bg-white rounded-xl shadow-xl border border-gray-200 opacity-0 invisible transform scale-95 transition-all duration-200 ease-out"
						>
							<div class="p-4">
								<!-- Video Editing -->
								<div class="mb-6">
									<h4 class="text-sm font-semibold text-gray-900 mb-3 px-2">Video Editing</h4>
									<div class="grid grid-cols-2 gap-1">
										<a href="/trim" class="flex items-center gap-3 p-2 hover:bg-gray-50 rounded-lg transition-colors group">
											<div class="w-8 h-8 bg-teal-100 rounded-lg flex items-center justify-center group-hover:bg-teal-200 transition-colors">
												<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-teal-600">
													<path d="M20 4L3 11l3 3l4-2l2 4Z"/>
												</svg>
											</div>
											<div>
												<div class="text-sm font-medium text-gray-900">Trimmer</div>
												<div class="text-xs text-gray-500">Cut videos</div>
											</div>
										</a>
										<a href="/merge" class="flex items-center gap-3 p-2 hover:bg-gray-50 rounded-lg transition-colors group">
											<div class="w-8 h-8 bg-teal-100 rounded-lg flex items-center justify-center group-hover:bg-teal-200 transition-colors">
												<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-teal-600">
													<path d="M8 3L4 7L8 11M16 21L20 17L16 13M4 7H16M20 17H8"/>
												</svg>
											</div>
											<div>
												<div class="text-sm font-medium text-gray-900">Merger</div>
												<div class="text-xs text-gray-500">Join videos</div>
											</div>
										</a>
										<a href="/resize" class="flex items-center gap-3 p-2 hover:bg-gray-50 rounded-lg transition-colors group">
											<div class="w-8 h-8 bg-teal-100 rounded-lg flex items-center justify-center group-hover:bg-teal-200 transition-colors">
												<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-teal-600">
													<path d="M8 3H5C3.89 3 3 3.89 3 5V8M21 8V5C21 3.89 20.11 3 19 3H16M16 21H19C20.11 21 21 20.11 21 19V16M3 16V19C3 20.11 3.89 21 5 21H8"/>
												</svg>
											</div>
											<div>
												<div class="text-sm font-medium text-gray-900">Resizer</div>
												<div class="text-xs text-gray-500">Change size</div>
											</div>
										</a>
										<a href="/crop" class="flex items-center gap-3 p-2 hover:bg-gray-50 rounded-lg transition-colors group">
											<div class="w-8 h-8 bg-teal-100 rounded-lg flex items-center justify-center group-hover:bg-teal-200 transition-colors">
												<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-teal-600">
													<path d="M6 2V6H2V8H6V18C6 19.1 6.9 20 8 20H18V24H20V20H24V18H20V8C20 6.9 19.1 6 18 6H8V2H6Z"/>
												</svg>
											</div>
											<div>
												<div class="text-sm font-medium text-gray-900">Cropper</div>
												<div class="text-xs text-gray-500">Crop area</div>
											</div>
										</a>
									</div>
								</div>

								<!-- Converters -->
								<div class="mb-6">
									<h4 class="text-sm font-semibold text-gray-900 mb-3 px-2">Format Converters</h4>
									<div class="grid grid-cols-3 gap-1">
										<a href="/to-mp4" class="flex flex-col items-center gap-2 p-2 hover:bg-gray-50 rounded-lg transition-colors text-center">
											<div class="w-8 h-8 bg-orange-100 rounded-lg flex items-center justify-center hover:bg-orange-200 transition-colors">
												<span class="text-xs font-bold text-orange-700">MP4</span>
											</div>
											<div class="text-xs text-gray-600">MP4</div>
										</a>
										<a href="/to-avi" class="flex flex-col items-center gap-2 p-2 hover:bg-gray-50 rounded-lg transition-colors text-center">
											<div class="w-8 h-8 bg-orange-100 rounded-lg flex items-center justify-center hover:bg-orange-200 transition-colors">
												<span class="text-xs font-bold text-orange-700">AVI</span>
											</div>
											<div class="text-xs text-gray-600">AVI</div>
										</a>
										<a href="/to-mov" class="flex flex-col items-center gap-2 p-2 hover:bg-gray-50 rounded-lg transition-colors text-center">
											<div class="w-8 h-8 bg-orange-100 rounded-lg flex items-center justify-center hover:bg-orange-200 transition-colors">
												<span class="text-xs font-bold text-orange-700">MOV</span>
											</div>
											<div class="text-xs text-gray-600">MOV</div>
										</a>
										<a href="/to-webm" class="flex flex-col items-center gap-2 p-2 hover:bg-gray-50 rounded-lg transition-colors text-center">
											<div class="w-8 h-8 bg-orange-100 rounded-lg flex items-center justify-center hover:bg-orange-200 transition-colors">
												<span class="text-xs font-bold text-orange-700">WEB</span>
											</div>
											<div class="text-xs text-gray-600">WebM</div>
										</a>
										<a href="/to-gif" class="flex flex-col items-center gap-2 p-2 hover:bg-gray-50 rounded-lg transition-colors text-center">
											<div class="w-8 h-8 bg-orange-100 rounded-lg flex items-center justify-center hover:bg-orange-200 transition-colors">
												<span class="text-xs font-bold text-orange-700">GIF</span>
											</div>
											<div class="text-xs text-gray-600">GIF</div>
										</a>
										<a href="/to-mkv" class="flex flex-col items-center gap-2 p-2 hover:bg-gray-50 rounded-lg transition-colors text-center">
											<div class="w-8 h-8 bg-orange-100 rounded-lg flex items-center justify-center hover:bg-orange-200 transition-colors">
												<span class="text-xs font-bold text-orange-700">MKV</span>
											</div>
											<div class="text-xs text-gray-600">MKV</div>
										</a>
									</div>
								</div>

								<!-- Audio & Quality -->
								<div>
									<h4 class="text-sm font-semibold text-gray-900 mb-3 px-2">Audio & Quality</h4>
									<div class="grid grid-cols-2 gap-1">
										<a href="/compress" class="flex items-center gap-3 p-2 hover:bg-gray-50 rounded-lg transition-colors group">
											<div class="w-8 h-8 bg-orange-100 rounded-lg flex items-center justify-center group-hover:bg-orange-200 transition-colors">
												<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-orange-600">
													<path d="M21 8V5C21 3.89 20.11 3 19 3H5C3.89 3 3 3.89 3 5V8M3 16V19C3 20.11 3.89 21 5 21H19C20.11 21 21 20.11 21 19V16"/>
													<line x1="7" y1="7" x2="7" y2="17"/>
													<line x1="17" y1="7" x2="17" y2="17"/>
												</svg>
											</div>
											<div>
												<div class="text-sm font-medium text-gray-900">Compress</div>
												<div class="text-xs text-gray-500">Reduce size</div>
											</div>
										</a>
										<a href="/extract-audio" class="flex items-center gap-3 p-2 hover:bg-gray-50 rounded-lg transition-colors group">
											<div class="w-8 h-8 bg-orange-100 rounded-lg flex items-center justify-center group-hover:bg-orange-200 transition-colors">
												<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-orange-600">
													<path d="M9 18V5L12.5 8.5L16 5V18L12.5 14.5L9 18Z"/>
													<path d="M20 4L16 8L20 12"/>
												</svg>
											</div>
											<div>
												<div class="text-sm font-medium text-gray-900">Extract Audio</div>
												<div class="text-xs text-gray-500">Get audio</div>
											</div>
										</a>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				
				<div class="text-sm text-gray-600 bg-gray-100 px-3 py-1 rounded-full">
					Private â€¢ No uploads
				</div>
			</div>
		</nav>

		<!-- Hero Section -->
		<section class="pt-16 pb-12 px-6">
			<div class="max-w-3xl mx-auto text-center">
				<h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
					Professional video editing<br>
					<span class="text-teal-600">in your browser</span>
				</h1>
				<p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
					Trim, convert, and compress videos instantly. No downloads, no accounts. Your files never leave your device.
				</p>
				
				<!-- Primary CTA -->
				<a href="/trim" class="inline-flex items-center gap-2 bg-white hover:bg-gray-50 text-gray-900 border-2 border-gray-900 px-8 py-4 font-medium text-lg transition-colors shadow-sm">
					Start editing
					<svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
						<path d="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z"/>
					</svg>
				</a>
			</div>
		</section>

		<!-- Popular Tools -->
		<section class="pb-16 px-6">
			<div class="max-w-4xl mx-auto">
				<h2 class="text-2xl font-semibold text-gray-900 mb-8 text-center">Most used tools</h2>
				
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mb-12">
					<a href="/trim" class="group p-6 bg-white rounded-lg border border-gray-200 hover:border-teal-300 hover:shadow-md transition-all">
						<div class="w-12 h-12 bg-teal-100 rounded-lg flex items-center justify-center mb-4 group-hover:bg-teal-200 transition-colors">
							<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-teal-600">
								<path d="M20 4L3 11l3 3l4-2l2 4Z"/>
							</svg>
						</div>
						<h3 class="font-semibold text-gray-900 mb-2">Video Trimmer</h3>
						<p class="text-sm text-gray-600">Cut videos with frame precision</p>
					</a>

					<a href="/compress" class="group p-6 bg-white rounded-lg border border-gray-200 hover:border-teal-300 hover:shadow-md transition-all">
						<div class="w-12 h-12 bg-teal-100 rounded-lg flex items-center justify-center mb-4 group-hover:bg-teal-200 transition-colors">
							<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-teal-600">
								<rect x="2" y="3" width="20" height="14" rx="2" ry="2"/>
								<line x1="8" y1="21" x2="16" y2="21"/>
								<line x1="12" y1="17" x2="12" y2="21"/>
							</svg>
						</div>
						<h3 class="font-semibold text-gray-900 mb-2">Compressor</h3>
						<p class="text-sm text-gray-600">Reduce file size instantly</p>
					</a>

					<a href="/to-mp4" class="group p-6 bg-white rounded-lg border border-gray-200 hover:border-teal-300 hover:shadow-md transition-all">
						<div class="w-12 h-12 bg-teal-100 rounded-lg flex items-center justify-center mb-4 group-hover:bg-teal-200 transition-colors">
							<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-teal-600">
								<path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/>
								<polyline points="14,2 14,8 20,8"/>
							</svg>
						</div>
						<h3 class="font-semibold text-gray-900 mb-2">Convert to MP4</h3>
						<p class="text-sm text-gray-600">Universal format converter</p>
					</a>
				</div>

				<!-- All Tools Toggle -->
				<div class="text-center">
					<button id="show-all-tools" class="text-teal-600 hover:text-teal-700 font-medium">
						View all tools
						<svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" class="inline ml-1">
							<path d="M7.41,8.58L12,13.17L16.59,8.58L18,10L12,16L6,10L7.41,8.58Z"/>
						</svg>
					</button>
				</div>

				<!-- All Tools Section (Initially Hidden) -->
				<div id="all-tools" class="hidden mt-12 pt-8 border-t border-gray-200">
					<div class="space-y-8">
						<!-- Video Editing -->
						<div>
							<h3 class="text-lg font-medium text-gray-900 mb-4">Video Editing</h3>
							<div class="grid grid-cols-2 md:grid-cols-4 gap-3">
								<a href="/trim" class="p-3 text-center bg-white rounded-lg border border-gray-200 hover:border-teal-300 transition-colors">
									<div class="text-sm font-medium text-gray-900">Trimmer</div>
								</a>
								<a href="/merge" class="p-3 text-center bg-white rounded-lg border border-gray-200 hover:border-teal-300 transition-colors">
									<div class="text-sm font-medium text-gray-900">Merger</div>
								</a>
								<a href="/resize" class="p-3 text-center bg-white rounded-lg border border-gray-200 hover:border-teal-300 transition-colors">
									<div class="text-sm font-medium text-gray-900">Resizer</div>
								</a>
								<a href="/crop" class="p-3 text-center bg-white rounded-lg border border-gray-200 hover:border-teal-300 transition-colors">
									<div class="text-sm font-medium text-gray-900">Cropper</div>
								</a>
							</div>
						</div>

						<!-- Converters -->
						<div>
							<h3 class="text-lg font-medium text-gray-900 mb-4">Format Converters</h3>
							<div class="grid grid-cols-3 md:grid-cols-6 gap-3">
								<a href="/to-mp4" class="p-3 text-center bg-white rounded-lg border border-gray-200 hover:border-teal-300 transition-colors">
									<div class="text-sm font-medium text-gray-900">MP4</div>
								</a>
								<a href="/to-avi" class="p-3 text-center bg-white rounded-lg border border-gray-200 hover:border-teal-300 transition-colors">
									<div class="text-sm font-medium text-gray-900">AVI</div>
								</a>
								<a href="/to-mov" class="p-3 text-center bg-white rounded-lg border border-gray-200 hover:border-teal-300 transition-colors">
									<div class="text-sm font-medium text-gray-900">MOV</div>
								</a>
								<a href="/to-webm" class="p-3 text-center bg-white rounded-lg border border-gray-200 hover:border-teal-300 transition-colors">
									<div class="text-sm font-medium text-gray-900">WebM</div>
								</a>
								<a href="/to-gif" class="p-3 text-center bg-white rounded-lg border border-gray-200 hover:border-teal-300 transition-colors">
									<div class="text-sm font-medium text-gray-900">GIF</div>
								</a>
								<a href="/to-mkv" class="p-3 text-center bg-white rounded-lg border border-gray-200 hover:border-teal-300 transition-colors">
									<div class="text-sm font-medium text-gray-900">MKV</div>
								</a>
							</div>
						</div>

						<!-- Audio -->
						<div>
							<h3 class="text-lg font-medium text-gray-900 mb-4">Audio & Quality</h3>
							<div class="grid grid-cols-2 md:grid-cols-4 gap-3">
								<a href="/extract-audio" class="p-3 text-center bg-white rounded-lg border border-gray-200 hover:border-teal-300 transition-colors">
									<div class="text-sm font-medium text-gray-900">Extract Audio</div>
								</a>
								<a href="/compress" class="p-3 text-center bg-white rounded-lg border border-gray-200 hover:border-teal-300 transition-colors">
									<div class="text-sm font-medium text-gray-900">Compress</div>
								</a>
								<a href="/enhance" class="p-3 text-center bg-white rounded-lg border border-gray-200 hover:border-teal-300 transition-colors">
									<div class="text-sm font-medium text-gray-900">Enhance</div>
								</a>
								<a href="/volume" class="p-3 text-center bg-white rounded-lg border border-gray-200 hover:border-teal-300 transition-colors">
									<div class="text-sm font-medium text-gray-900">Volume</div>
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>

	<ToolsDropdown />
	
	<script>
		// Show all tools toggle functionality
		document.getElementById('show-all-tools')?.addEventListener('click', function() {
			const allTools = document.getElementById('all-tools');
			const button = this;
			
			if (allTools?.classList.contains('hidden')) {
				allTools.classList.remove('hidden');
				button.textContent = 'Show less';
			} else {
				allTools?.classList.add('hidden');
				button.innerHTML = 'View all tools <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" class="inline ml-1"><path d="M7.41,8.58L12,13.17L16.59,8.58L18,10L12,16L6,10L7.41,8.58Z"/></svg>';
			}
		});
	</script>
</Layout>