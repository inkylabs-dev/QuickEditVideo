---
import Layout from '../layouts/Layout.astro';
import { CTAButton } from '../components/CTAButton.tsx';
import { HomeToolsReact } from '../components/HomeToolsReact.tsx';
---

<Layout 
	title="QuickEditVideo - Free Online Video Editor & Trimmer"
	description="Edit videos online for free! Trim, convert, compress & enhance videos in your browser. No uploads, no signups. Works with MP4, AVI, WebM. Start editing now!"
	keywords="video editor, online video editor, free video editor, video trimmer, video converter, trim video, cut video, edit video online, video compression, MP4 editor, WebM editor, AVI editor"
	ogTitle="QuickEditVideo - Professional Video Editing in Your Browser"
	ogDescription="Professional video editing made simple. Trim, convert, and compress videos instantly. No downloads, no accounts. Your files never leave your device."
	canonicalUrl="https://quickeditvideo.com/"
>
	<main class="min-h-screen bg-gray-50">

		<!-- Hero Section -->
		<section class="pt-16 pb-12 px-6">
			<div class="max-w-3xl mx-auto text-center">
				<h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
					Edit Faster, Ready in Minutes.<br>
					All in <span class="text-teal-600">QuickEditVideo.com</span>
				</h1>
				<p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
					Trim, convert, and compress videos instantly. No downloads, no accounts. Your files never leave your device.
				</p>
				
				
				<!-- Primary CTA -->
				<CTAButton href="/trim" client:load>
					Start editing
				</CTAButton>
			</div>
		</section>

		<!-- HomeTools Component -->
		<HomeToolsReact client:load />
	</main>
</Layout>