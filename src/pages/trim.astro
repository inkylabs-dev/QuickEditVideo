---
import Layout from '../layouts/Layout.astro';
import VideoTrimmer from '../components/VideoTrimmer.astro';
---

<Layout>
	<main class="min-h-screen bg-gray-50">
		<!-- Navigation -->
		<nav class="bg-white border-b border-gray-200 sticky top-0 z-50">
			<div class="max-w-6xl mx-auto px-6 py-4 flex items-center justify-between">
				<div class="flex items-center gap-4">
					<a href="/" class="text-blue-600 hover:text-blue-700">
						<svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
							<path d="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z"/>
						</svg>
					</a>
					<div>
						<div class="font-semibold text-gray-900">Video Trimmer</div>
						<div class="text-xs text-gray-500">Cut videos with precision</div>
					</div>
				</div>
				<div class="text-sm text-gray-600 bg-gray-100 px-3 py-1 rounded-full">
					Private â€¢ No uploads
				</div>
			</div>
		</nav>

		<!-- Main Video Editor -->
		<section class="p-6">
			<div class="max-w-6xl mx-auto">
				<VideoTrimmer />
			</div>
		</section>

		<!-- Quick Help (Only shown when no video loaded) -->
		<section id="quick-help" class="px-6 pb-16">
			<div class="max-w-2xl mx-auto">
				<div class="bg-white rounded-lg border border-gray-200 p-6">
					<h3 class="font-semibold text-gray-900 mb-4">Quick Guide</h3>
					<div class="space-y-3 text-sm text-gray-600">
						<div class="flex items-start gap-3">
							<div class="w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center text-blue-600 text-xs font-medium mt-0.5">1</div>
							<div>Upload your video file (supports MP4, WebM, AVI, MOV)</div>
						</div>
						<div class="flex items-start gap-3">
							<div class="w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center text-blue-600 text-xs font-medium mt-0.5">2</div>
							<div>Drag timeline handles to set start and end points</div>
						</div>
						<div class="flex items-start gap-3">
							<div class="w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center text-blue-600 text-xs font-medium mt-0.5">3</div>
							<div>Preview your selection and download the trimmed video</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
</Layout>