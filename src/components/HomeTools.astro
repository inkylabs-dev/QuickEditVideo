---
// HomeTools.astro - Homepage tools section component
import { getFeaturedTools, getCategories } from '../constants/tools';

const featuredTools = getFeaturedTools();
const categories = getCategories();
---

<!-- Popular Tools -->
<section class="pb-16 px-6">
	<div class="max-w-4xl mx-auto">
		<h2 class="text-2xl font-semibold text-gray-900 mb-8 text-center">Most used tools</h2>
		
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mb-12">
			{featuredTools.map(tool => (
				<a href={tool.url} class="group p-6 bg-white rounded-lg border border-gray-200 hover:border-teal-300 hover:shadow-md transition-all">
					<div class={`w-12 h-12 ${tool.bgColor} rounded-lg flex items-center justify-center mb-4 ${tool.hoverBgColor} transition-colors`}>
						{tool.icon.type === 'svg' ? (
							<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class={tool.iconColor}>
								<Fragment set:html={tool.icon.content} />
							</svg>
						) : (
							<span class={`${tool.icon.className || ''} ${tool.iconColor}`}>
								{tool.icon.content}
							</span>
						)}
					</div>
					<h3 class="font-semibold text-gray-900 mb-2">{tool.name}</h3>
					<p class="text-sm text-gray-600">{tool.description}</p>
				</a>
			))}
		</div>

		<!-- All Tools Section -->
		<h2 class="text-2xl font-semibold text-gray-900 mb-8 text-center mt-12">All tools</h2>
		<div id="all-tools" class="pt-8 border-t border-gray-200">
			<div class="space-y-8">
				{categories.map(category => (
					<div>
						<h3 class="text-lg font-medium text-gray-900 mb-4">{category.name}</h3>
						<div class={`grid gap-3 ${category.id === 'converters' ? 'grid-cols-3 md:grid-cols-6' : 'grid-cols-2 md:grid-cols-4'}`}>
							{category.tools.map(tool => (
								<a href={tool.url} class="p-3 text-center bg-white rounded-lg border border-gray-200 hover:border-teal-300 transition-colors">
									<div class="text-sm font-medium text-gray-900">{tool.shortName || tool.name}</div>
								</a>
							))}
						</div>
					</div>
				))}
			</div>
		</div>
	</div>
</section>
