{
  "name": "quickeditvideo",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "node scripts/copy-ffmpeg.js && astro dev",
    "build": "pnpm run build:packages && node scripts/copy-ffmpeg.js && astro build",
    "build:packages": "pnpm --filter @quickeditvideo/kittentts run build && pnpm --filter @quickeditvideo/editor run build",
    "preview": "astro preview",
    "astro": "astro",
    "copy-ffmpeg": "node scripts/copy-ffmpeg.js",
    "postinstall": "node scripts/copy-ffmpeg.js",
    "test": "vitest run && playwright test --reporter=line",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:e2e": "playwright test --reporter=line",
    "test:e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "@astrojs/partytown": "^2.1.4",
    "@astrojs/preact": "^4.1.0",
    "@astrojs/sitemap": "^3.5.0",
    "@astrojs/tailwind": "^6.0.2",
    "@ffmpeg/core": "^0.12.10",
    "@ffmpeg/ffmpeg": "^0.12.10",
    "@ffmpeg/util": "^0.12.2",
    "@mediabunny/mp3-encoder": "^1.9.0",
    "@preact/signals": "^2.2.1",
    "@quickeditvideo/kittentts": "workspace:*",
    "@quickeditvideo/editor": "workspace:*",
    "@tailwindcss/typography": "^0.5.16",
    "astro": "^5.12.9",
    "jszip": "^3.10.1",
    "mediabunny": "^1.9.0",
    "mp4box": "^1.4.7",
    "onnxruntime-web": "^1.22.0",
    "phonemizer": "^1.2.1",
    "preact": "^10.27.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "tailwindcss": "^3.4.17",
    "video.js": "^8.23.4"
  },
  "overrides": {
    "react": "npm:@preact/compat@latest",
    "react-dom": "npm:@preact/compat@latest"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@rollup/plugin-wasm": "^6.2.2",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/preact": "^3.2.4",
    "@testing-library/react": "^16.3.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^3.2.4"
  }
}
