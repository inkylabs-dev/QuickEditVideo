{
  "name": "quickeditvideo",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "node scripts/copy-ffmpeg.js && astro dev",
    "build": "pnpm run build:packages && node scripts/copy-ffmpeg.js && astro build",
    "build:packages": "pnpm --filter @quickeditvideo/kittentts run build && pnpm --filter @quickeditvideo/editor run build",
    "preview": "astro preview",
    "astro": "astro",
    "copy-ffmpeg": "node scripts/copy-ffmpeg.js",
    "postinstall": "node scripts/copy-ffmpeg.js",
    "test": "vitest run && playwright test --reporter=line",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:e2e": "playwright test --reporter=line",
    "test:e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "@astrojs/partytown": "^2.1.4",
    "@astrojs/react": "^4.4.2",
    "@astrojs/sitemap": "^3.6.0",
    "@astrojs/tailwind": "^6.0.2",
    "@ffmpeg/core": "^0.12.10",
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@ffmpeg/util": "^0.12.2",
    "@mediabunny/mp3-encoder": "^1.27.0",
    "@quickeditvideo/editor": "workspace:*",
    "@quickeditvideo/kittentts": "workspace:*",
    "@tailwindcss/typography": "^0.5.19",
    "astro": "^5.16.6",
    "jszip": "^3.10.1",
    "mediabunny": "^1.27.0",
    "mp4box": "^1.5.0",
    "onnxruntime-web": "^1.23.2",
    "phonemizer": "^1.2.1",
    "react": "^18.3.1",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.19",
    "video.js": "^8.23.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@rollup/plugin-wasm": "^6.2.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "vite": "^6.4.1",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^3.2.4"
  }
}
